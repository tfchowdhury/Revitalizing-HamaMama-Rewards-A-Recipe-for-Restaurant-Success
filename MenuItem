CREATE TABLE MenuItem (
ITEM_ID INT PRIMARY KEY,
ITEM_NAME VARCHAR(100) NOT NULL,
ITEM_DESCRIPTION VARCHAR(255),
ITEM_PRICE NUMBER(9,2) NOT NULL,
DIET_INFORMATION VARCHAR(255),
SPECIAL_ITEM CHAR(1) DEFAULT 'N'
CHECK (SPECIAL_ITEM IN ('Y', 'N')),
HAMAFIT_OPTION CHAR(1) DEFAULT 'N'
CHECK (HAMAFIT_OPTION IN ('Y', 'N')) 
);

